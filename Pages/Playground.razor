@page "/playground"
@using NorthwindCloud
@inject INorthwindCloudService northwindCloudService

<div class="row-layout playground-container">
    <div class="column-layout group">
        <h5 class="h5">
            Playground
        </h5>
        <p class="typography__body-1 text">
            Body 1
        </p>
        <IgbCombo Outlined="true" Data="northwindCloudCustomer" Label="Label/Placeholder" ValueKey="customerID" DisplayKey="customerID" autoFocusSearch="true" class="combo" playground-scope></IgbCombo>
    </div>
</div>

@code {
    private List<Customer> northwindCloudCustomer = new();

    protected override async Task OnInitializedAsync()
    {
        northwindCloudCustomer = await northwindCloudService.GetCustomer();
    }
}
